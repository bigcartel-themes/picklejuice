{
  "name": "PickleJuice",
  "version": "0.0.1",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Adds your logo to the header"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow",
      "label": "Homepage Slideshow",
      "description": "900px by 500px images recommended"
    }
  ],
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Open Sans"
    },
    {
      "variable": "secondary_font",
      "label": "Secondary Font",
      "default": "Sorts Mill Goudy"
    }
  ],
  "colors": [
    {
      "variable": "primary_color",
      "label": "Primary Color",
      "default": "#dbf1da"
    },
    {
      "variable": "secondary_color",
      "label": "Secondary Color",
      "default": "#5fb252"
    }
  ],
  "options": [
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": false,
      "description": "Shows a search field"
    },
    {
      "variable": "product_image_size",
      "label": "Product image size",
      "type": "select",
      "options": [["Small", "thumb"], ["Medium", "medium"], ["Large", "large"], ["Huge", ""]],
      "default": "large",
      "description": "The size of your product images"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 9,
      "description": "The number of products shown per page"
    },
    {
      "variable": "facebook_username",
      "label": "Facebook username",
      "type": "text",
      "description": "Ex: bigcartel"
    },
    {
      "variable": "twitter_username",
      "label": "Twitter username",
      "type": "text",
      "description": "Ex: bigcartel"
    },
    {
      "variable": "instagram_username",
      "label": "Instagram username",
      "type": "text",
      "description": "Ex: bigcartel"
    },
    {
      "variable": "pinterest_username",
      "label": "Pinterest username",
      "type": "text",
      "description": "Ex: bigcartel"
    }
  ]
}
