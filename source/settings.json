{
  "name": "PickleJuice",
  "version": "3.0.0",
  "images": [
    {
      "variable": "logo",
      "label": "Header image",
      "description": "Adds your logo to the header"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow",
      "label": "Home Slideshow",
      "description": "1440px by 800px images recommended"
    }
  ],
  "preset_styles": {
    "preview": {
      "title_font": "primary_font",
      "body_font": "secondary_font",
      "text_color": "text_color",
      "background_color": "background_color"
    },
    "presets": [
      {
        "group_name": "Pastel",
        "styles": [
          {
            "style_name": "Pastel #1",
            "fonts": {
              "primary_font": "Montserrat",
              "secondary_font": "Goudy Bookletter 1911"
            },
            "colors": {
              "background_color": "#DBF1DA",
              "link_color": "#000000",
              "link_hover_color": "#227e13",
              "text_color": "#000000",
              "accent_background_color": "#FFFFFF",
              "border_color": "#333333",
              "button_text_color": "#FFFFFF",
              "button_background_color": "#333333",
              "button_hover_background_color": "#227e13"
            }
          },
          {
            "style_name": "Pastel #2",
            "fonts": {
              "primary_font": "Cabin",
              "secondary_font": "Cabin"
            },
            "colors": {
              "background_color": "#E6F3FF",
              "link_color": "#000000",
              "link_hover_color": "#1028B7",
              "text_color": "#000000",
              "accent_background_color": "#FFFFFF",
              "border_color": "#333333",
              "button_text_color": "#FFFFFF",
              "button_background_color": "#333333",
              "button_hover_background_color": "#227e13"
            }
          }
        ]
      },
      {
        "group_name": "Classic",
        "styles": [
          {
            "style_name": "Classic #1",
            "fonts": {
              "primary_font": "DM Sans",
              "secondary_font": "DM Sans"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "link_color": "#000000",
              "link_hover_color": "#5900FF",
              "text_color": "#000000",
              "accent_background_color": "#FFFFFF",
              "border_color": "#333333",
              "button_text_color": "#FFFFFF",
              "button_background_color": "#333333",
              "button_hover_background_color": "#227e13"
            }
          }
        ]
      },
      {
        "group_name": "Natural",
        "styles": [
          {
            "style_name": "Natural #1",
            "fonts": {
              "primary_font": "Cutive",
              "secondary_font": "Cutive Mono"
            },
            "colors": {
              "background_color": "#FEF5EF",
              "link_color": "#000000",
              "link_hover_color": "#584B53",
              "text_color": "#000000",
              "accent_background_color": "#FFFFFF",
              "border_color": "#333333",
              "button_text_color": "#FFFFFF",
              "button_background_color": "#333333",
              "button_hover_background_color": "#227e13"
            }
          },
          {
            "style_name": "Natural #2",
            "fonts": {
              "primary_font": "Prata",
              "secondary_font": "Source Sans Pro"
            },
            "colors": {
              "background_color": "#F1F1F1",
              "link_color": "#000000",
              "link_hover_color": "#8A5A5A",
              "text_color": "#000000",
              "accent_background_color": "#FFFFFF",
              "border_color": "#333333",
              "button_text_color": "#FFFFFF",
              "button_background_color": "#333333",
              "button_hover_background_color": "#227e13"
            }
          }
        ]
      }
    ]
  },
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Montserrat"
    },
    {
      "variable": "secondary_font",
      "label": "Secondary Font",
      "default": "Goudy Bookletter 1911"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background Color",
      "default": "#dbf1da"
    },
    {
      "variable": "accent_background_color",
      "label": "Accent background",
      "default": "#ffffff"
    },
    {
      "variable": "text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "variable": "link_color",
      "label": "Link",
      "default": "#000000"
    },
    {
      "variable": "link_hover_color",
      "label": "Link hover",
      "default": "#227e13"
    },
    {
      "variable": "button_text_color",
      "label": "Button text",
      "default": "#FFFFFF"
    },
    {
      "variable": "button_background_color",
      "label": "Button background",
      "default": "#000000"
    },
    {
      "variable": "button_hover_background_color",
      "label": "Button hover background",
      "default": "#227e13"
    },
    
    {
      "variable": "border_color",
      "label": "Borders",
      "default": "#333333"
    }
  ],
  "checkout": {
    "header_image": "{{ logo }}",
    "header_width": "300px",
    "title_background_color": "{{ background_color }}",
    "title_color": "#333333",
    "title_font": "{{ primary_font }}",
    "step_header_font": "{{ primary_font }}",
    "background_color": "{{ background_color }}",
    "body_font": "{{ primary_font }}",
    "input_border_radius": "0px",
    "button_background_color": "#333",
    "button_hover_background_color": "{{ secondary_color }}",
    "button_border_radius": "0px",
    "link_color": "{{ secondary_color }}"
  },
  "options": [
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Displays a search field in the Shop dropdown menu"
    },
    {
      "variable": "nav_items",
      "label": "Navigation items",
      "type": "select",
      "options": "0..4",
      "default": 2,
      "description": "The number of custom page links show in the main navigation"
    },
    {
      "variable": "featured_header",
      "label": "Featured header",
      "type": "text",
      "description": "Featured products header on the Home page",
      "default": "Featured"
    },
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products displayed on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": [
        ["Regular", "regular"],
        ["Top Selling", "sales"],
        ["Newest", "newest"]
      ],
      "default": "regular",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "all_products_button_text",
      "label": "All products button text",
      "type": "text",
      "description": "Displays underneath featured products, links to your Products page",
      "default": "All Products"
    },
    {
      "variable": "max_products_per_row",
      "label": "Maximum products per row",
      "type": "select",
      "options": "1..4",
      "default": 4,
      "description": "The maximum number of products displayed per row on larger screens"
    },
    {
      "variable": "max_products_per_row_mobile",
      "label": "Maximum products per row (mobile)",
      "type": "select",
      "options": "1..2",
      "default": 2,
      "description": "The number of products displayed per row on smaller screens"
    },
    {
      "variable": "grid_image_style",
      "label": "Product grid image style",
      "type": "select",
      "options": [
        ["Normal", "default"],
        ["Fit to square", "contain"],
        ["Crop to square", "cover"]
      ],
      "default": "cover",
      "description": "Sets the display of images in the product grid"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 48,
      "description": "The number of products displayed per page"
    },
    {
      "variable": "product_image_zoom",
      "label": "Enable product image zoom",
      "type": "boolean",
      "default": true,
      "description": "Click to open a larger version of the Product page image"
    },
    {
      "variable": "desktop_product_page_images",
      "label": "Desktop product page images",
      "type": "select",
      "options": [
        ["Thumbnails", "thumbnails"],
        ["Carousel", "carousel"],
        ["Stacked 2 column", "two-column"],
        ["Stacked full width", "stacked"]
      ],
      "default": "carousel",
      "description": "Sets the display of the Product page gallery"
    },
    {
      "variable": "mobile_product_page_images",
      "label": "Mobile product page image carousel",
      "type": "select",
      "options": [
        ["Show thumbnails", "show-thumbnails"],
        ["Hide thumbnails", "hide-thumbnails"]
      ],
      "default": "show-thumbnails",
      "description": "Choose to hide or show thumbnails on the mobile Product page carousel"
    },
    {
      "variable": "share_buttons",
      "label": "Show product share button",
      "type": "boolean",
      "default": true,
      "description": "Adds a Share button to your Product page after the description"
    },
    {
      "variable": "show_related_products",
      "label": "Show related products",
      "type": "boolean",
      "default": true,
      "description": "Displays related products on the Product page"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: https://instagram.com/bigcartel"
    },
    {
      "variable": "tiktok_url",
      "label": "TikTok URL",
      "type": "text",
      "description": "Ex: https://tiktok.com/@bigcartelofficial"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: https://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: https://facebook.com/bigcartel"
    },
    {
      "variable": "snapchat_url",
      "label": "Snapchat URL",
      "type": "text",
      "description": "Ex: https://snapchat.com/add/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: https://pinterest.com/big_cartel"
    },
    {
      "variable": "youtube_url",
      "label": "YouTube URL",
      "type": "text",
      "description": "Ex: https://youtube.com/@BigCartelDotCom"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: https://bigcartel.tumblr.com"
    },
    {
      "variable": "bandcamp_url",
      "label": "Bandcamp URL",
      "type": "text",
      "description": "Ex: https://bigcartel.bandcamp.com"
    }
  ]
}
