{
  "name": "PickleJuice",
  "version": "2.3.0",
  "images": [
    {
      "variable": "logo",
      "label": "Header image",
      "description": "Adds your logo to the header"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow",
      "label": "Home Slideshow",
      "description": "1440px by 800px images recommended"
    }
  ],
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Montserrat"
    },
    {
      "variable": "secondary_font",
      "label": "Secondary Font",
      "default": "Goudy Bookletter 1911"
    }
  ],
  "colors": [
    {
      "variable": "primary_color",
      "label": "Primary Color",
      "default": "#dbf1da"
    },
    {
      "variable": "secondary_color",
      "label": "Secondary Color",
      "default": "#5fb252"
    }
  ],
  "checkout": {
    "header_image": "{{ logo }}",
    "header_width": "300px",
    "title_background_color": "{{ primary_color }}",
    "title_font": "{{ primary_font }}",
    "step_header_font": "{{ primary_font }}",
    "background_color": "{{ primary_color }}",
    "body_font": "{{ primary_font }}",
    "input_border_radius": "0px",
    "button_background_color": "#333",
    "button_hover_background_color": "{{ secondary_color }}",
    "button_border_radius": "0px",
    "link_color": "{{ secondary_color }}"
  },
  "options": [
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products displayed on the home page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 12,
      "description": "The number of products shown per page"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Displays a search field in the footer"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: http://facebook.com/bigcartel"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: http://bigcartel.tumblr.com"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: http://instagram.com/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: http://pinterest.com/bigcartel"
    }
  ]
}
